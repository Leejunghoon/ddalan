<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 프로필 관리 -->

    <PreferenceCategory android:title="개인 정보" >

        <!--
        <Preference
            android:title="아바타 변경"
            android:key="setAvatar"/>    
        DialogPreference를 띄우고 싶었지만ㅠㅠ 사진을 넣을 수가 없었다. 그래서 결국 액티비티 다이얼로그를 띄움.
        -->

        <com.ddalan.www.ProfilePref
            android:dialogIcon="@drawable/woman"
            android:dialogMessage="이 부분에 사진을 넣고싶다"
            android:key="setAvatar"
            android:negativeButtonText="취소"
            android:positiveButtonText="확인"
            android:summary="친구들에게 보여줄 아바타를 바꿔보세요."
            android:title="아바타 설정" />

        <SwitchPreference 
            android:title="@string/allowAutoSync" />
    </PreferenceCategory>

    <!-- 알림 관리 -->

    <PreferenceCategory 
        android:title="@string/notification" >

        <SwitchPreference
            android:key="allowPush"
            android:title="@string/push" />

        <SwitchPreference
            android:key="allowVibration"
            android:title="@string/vibrate" />

        <SwitchPreference
            android:disableDependentsState="true"
            android:key="allowSound"
            android:title="@string/sound" />

        <RingtonePreference
            android:key="selectRingtone"
            android:ringtoneType="notification"
            android:showDefault="true"
            android:showSilent="true"
            android:title="@string/ddalan" />
    </PreferenceCategory>

</PreferenceScreen>