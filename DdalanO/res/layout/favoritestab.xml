<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="첫번째 여백"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="랭커 1,2,3위 표시하는 레이아웃"
        android:orientation="horizontal"
        android:weightSum="1" >

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.6"
            android:background="@android:color/black"
            android:contentDescription="랭커 1위" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:background="@android:color/holo_orange_light"
            android:contentDescription="랭커 2,3위 묶음"
            android:orientation="vertical"
            android:weightSum="1" >

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@android:color/black"
                android:contentDescription="랭커 2위" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@android:color/black"
                android:contentDescription="랭커 3위" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="두번째 여백"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="즐겨찾기한 친구 목록"
        android:orientation="horizontal"
        android:weightSum="1" >

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@android:color/black"
            android:contentDescription="즐겨찾기1" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.4"
            android:background="@android:color/black"
            android:contentDescription="즐겨찾기2" />

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@android:color/black"
            android:contentDescription="즐겨찾기3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="세번째 여백"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="추천친구 목록"
        android:orientation="horizontal"
        android:weightSum="1" >

        <View
            android:id="@+id/view13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@android:color/black"
            android:contentDescription="추천친구1" />

        <View
            android:id="@+id/view14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.4"
            android:background="@android:color/black"
            android:contentDescription="추천친구2" />

        <View
            android:id="@+id/view15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@android:color/black"
            android:contentDescription="추천친구3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="네번째 여백"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="빠른 환경설정?"
        android:orientation="horizontal"
        android:weightSum="1" >

        <View
            android:id="@+id/view10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.2"
            android:background="@android:color/black"
            android:contentDescription="환경설정 1" />

        <View
            android:id="@+id/view11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@android:color/black"
            android:contentDescription="환경설정 2" />

        <View
            android:id="@+id/view12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@android:color/black"
            android:contentDescription="환경설정 3" />
    </LinearLayout>

</LinearLayout>